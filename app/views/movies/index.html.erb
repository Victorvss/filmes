<div class="col-sm-6 col-xs-offset-2">

  <p id="notice"><%= notice %></p>

  <h1>Lista de Filmes</h1>
  <%= link_to 'Novo Filme', new_movie_path, class: "btn btn-info btn-sm pull-right" %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Diretor</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.director.try(:name) %></td>
          <td><%= movie.category.try(:name) %></td>
          <td><%= link_to 'Exibir', movie, class: "btn btn-warning btn-xs"%></td>
          <td><%= link_to 'Editar', edit_movie_path(movie), class: "btn btn-warning btn-xs" %></td>
          <td><%= link_to 'Deletar', movie, method: :delete, data: { confirm: 'Deseja deletar?' },   class: "btn btn-warning btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
